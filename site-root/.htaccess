# Load users/username=grannycookies at users/grannycookies
RewriteEngine On
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+users\/?username=([^\s]+) [NC]
RewriteRule ^ /%1? [R=302,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^(.+)$ /users/?username=$1 [L,QSA,NC]
